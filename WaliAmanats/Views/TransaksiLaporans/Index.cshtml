<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />

@section scripts{
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/moment-with-locales.min.js"></script>
    <script src="~/Scripts/sweetalert2.js"></script>
    <script>
        $(document).ready(function () {
            var t = $("#table").DataTable({
                "ajax": {
                    "url": "@Url.Action("GetAll", "TransaksiLaporans")",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": null },
                    { "data": "Perusahaan.Nama" },
                    { "data": "Produk.Nama" },
                    { "data": "NamaProduk" },
                    {
                        "render": function (data, type, row) {
                            return "<span class='label label-" + row.Status.Warna + "'>" + row.Status.Nama + "</span>";
                        }
                    },

                    {
                        "render": function (data, type, row) {
                            if (row.Status.Id != 1) {
                                return "<a class='btn btn-warning btn-sm' title='Ubah Data' onclick = GetById('" + row.Id + "');><i class='fa fa-edit'></i></a> <a class='btn btn-danger btn-sm' title='Hapus Data' onclick = Delete('" + row.Id + "');><i class='fa fa-remove'></i></a> <a class='btn btn-default btn-sm detail' title='Lihat Detail' onclick = Detail('" + row.Id + "');><i class='fa fa-info-circle'></i></a> ";
                            } else {
                                return "<a class='btn btn-danger btn-sm' title='Hapus Data' onclick = Delete('" + row.Id + "');><i class='fa fa-remove'></i></a> <a class='btn btn-default btn-sm detail' title='Lihat Detail' onclick = Detail('" + row.Id + "');><i class='fa fa-info-circle'></i></a>";
                            }
                        },

                    },
                ]
            })
            t.on('order.dt search.dt', function () {
                t.column(0, { search: 'applied', order: 'applied' }).nodes().each(function (cell, i) {
                    cell.innerHTML = i + 1;
                });
            }).draw();

            GetPerusahaan();
            GetPeriode();
            //GetPerwakilan();
            GetProduk();
            GetTugas();
            GetMataUang();

            $('#add').click(function () {
                //validation and add order items
                var isAllValid = true;
                if (!($('#Seri').val().trim() != '')) {
                    isAllValid = false;
                    $('#Seri').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#Seri').siblings('span.error').css('visibility', 'hidden');
                }
                if (!($('#KodeEfek').val().trim() != '')) {
                    isAllValid = false;
                    $('#KodeEfek').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#KodeEfek').siblings('span.error').css('visibility', 'hidden');
                }
                debugger;
                if (!($('#Periode').val().trim() != '')) {
                    isAllValid = false;
                    $('#Periode').parent().siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#Periode').parent().siblings('span.error').css('visibility', 'hidden');
                }

                if (!($('#Nominal').val().trim() != '')) {
                    isAllValid = false;
                    $('#Nominal').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#Nominal').siblings('span.error').css('visibility', 'hidden');
                }

                if (!($('#Terbit').val().trim() != '')) {
                    isAllValid = false;
                    $('#Terbit').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#Terbit').siblings('span.error').css('visibility', 'hidden');
                }

                if (!($('#Bunga').val().trim() != '')) {
                    isAllValid = false;
                    $('#Bunga').parent().siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#Bunga').parent().siblings('span.error').css('visibility', 'hidden');
                }

                if (!($('#JatuhTempo').val().trim() != '')) {
                    isAllValid = false;
                    $('#JatuhTempo').siblings('span.error').css('visibility', 'visible');
                }
                else {
                    $('#JatuhTempo').siblings('span.error').css('visibility', 'hidden');
                }

                if (isAllValid) {
                    var $newRow = $('#mainrow').clone().removeAttr('id');
                    $('.periode', $newRow).val($('#Periode').val());

                    //Replace add button with remove button
                    $('#add', $newRow).addClass('remove').val('remove').removeClass('btn-success').addClass('btn-danger').find('i').removeClass('fa-plus').addClass('fa-remove');

                    //remove id attribute from new clone row
                    $('#Seri, #KodeEfek ,#Periode, #Nominal, #Terbit, #Bunga, #JatuhTempo', $newRow).removeAttr('id');
                    $('span.error', $newRow).remove();
                    //append clone row
                    $('#detailsItems').append($newRow);

                    //clear select data
                    $('#Seri, #KodeEfek, #Periode, #Nominal, #Terbit, #Bunga, #JatuhTempo').val('');
                    $('#ItemError').empty();
                }

            });

            //remove button click event
            $('#detailsItems').on('click', '.remove', function () {
                $(this).parents('tr').remove();
            });

            $('#Save').click(function () {
                debugger;
                var isAllValid = true;

                //validate order items
                $('#ItemError').text('');
                var list = [];
                var errorItemCount = 0;
                $('#detailsItems tr').each(function () {
                    if ($('input.seri', this).val() == "" ||
                        $('input.kodeefek', this).val() == "" ||
                        $('select.periode', this).val() == "" ||
                        $('input.nominal', this).val() == "" ||
                        $('input.terbit', this).val() == "" ||
                        $('input.bunga', this).val() == "" ||
                        $('input.jatuhtempo', this).val() == "") {
                        errorItemCount++;
                        $(this).addClass('error');
                    } else {
                        var detail = {
                            Id: $('input.detailid', this).val(),
                            Seri: $('input.seri', this).val(),
                            KodeEfek: $('input.kodeefek', this).val(),
                            Periode_Id: $('select.periode', this).val(),
                            Nominal: minkoma($('input.nominal', this).val()),
                            TglTerbit: $('input.terbit', this).val(),
                            Bunga: $('input.bunga', this).val(),
                            TglJatuhTempo: $('input.jatuhtempo', this).val()
                        }
                        list.push(detail);
                    }
                });

                if (errorItemCount > 0) {
                    $('#ItemError').text(errorItemCount + " invalid entry in order item list.");
                    isAllValid = false;
                }

                if (list.length == 0) {
                    $('#ItemError').text('Dibutuhkan minimal satu detail valid.');
                    isAllValid = false;
                }

                if ($('#Perusahaan').val().trim() == '') {
                    $('#Perusahaan').siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#Perusahaan').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#Produk').val() == '') {
                    $('#Produk').siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#Produk').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#NamaProduk').val() == '') {
                    $('#NamaProduk').siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#NamaProduk').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#Perwakilan').val() == '') {
                    $('#Perwakilan').siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#Perwakilan').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#Tugas').val() == '') {
                    $('#Tugas').siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#Tugas').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#MataUang').val() == '') {
                    $('#MataUang').siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#MataUang').siblings('span.error').css('visibility', 'hidden');
                }
                if ($('#JenisPembayaran').val() == '') {
                    $('#JenisPembayaran').siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#JenisPembayaran').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#Fee').val() == '') {
                    $('#Fee').parent().siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#Fee').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#JenisPengiriman').val() == '') {
                    $('#JenisPengiriman').siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#JenisPengiriman').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#NamaBank').val() == '') {
                    $('#NamaBank').siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#NamaBank').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#NamaPenerima').val() == '') {
                    $('#NamaPenerima').siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#NamaPenerima').siblings('span.error').css('visibility', 'hidden');
                }

                if ($('#NoRekening').val() == '') {
                    $('#NoRekening').siblings('span.error').css('visibility', 'visible');
                    isAllValid = false;
                }
                else {
                    $('#NoRekening').siblings('span.error').css('visibility', 'hidden');
                }

                if (isAllValid) {
                    var data = {
                        Id: $('#TransaksiId').val(),
                        Perusahaan_Id: $('#Perusahaan').val().trim(),
                        NamaPerwakilan_Id: $('#Perwakilan').val().trim(),
                        Jabatan_Id: $('#JabatanId').val().trim(),
                        Produk_Id: $('#Produk').val().trim(),
                        NamaProduk: $('#NamaProduk').val().trim(),
                        JenisTugas_Id: $('#Tugas').val().trim(),
                        MataUang_Id: $('#MataUang').val().trim(),
                        JenisPembayaran: $("#JenisPembayaran").val().trim(),
                        Fee: minkoma($('#Fee').val().trim()),
                        JenisPengiriman: $('#JenisPengiriman').val().trim(),
                        NamaBank: $('#NamaBank').val().trim(),
                        NamaPenerima: $('#NamaPenerima').val().trim(),
                        NoRekening: $('#NoRekening').val().trim(),
                        Details: list
                    }

                    $(this).val('Please wait...');

                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("Save", "TransaksiLaporans")',
                        data: JSON.stringify(data),
                        contentType: 'application/json',
                        success: function (data) {
                            if (data.status) {
                                swal.fire('Successfully saved');
                                //here we will clear the form
                                list = [];
                                $('#Perusahaan,#Perwakilan,#JabatanId,#Produk,#NamaProduk,#NamaProduk,#Tugas,#MataUang,#JenisPembayaran,#Fee,#JenisPengiriman,#NamaBank,#NamaPenerima,#NoRekening').val('');
                                $('#detailsItems').empty();
                                $("#myModal").modal('hide');
                                $('#table').DataTable().ajax.reload();
                            }
                            else {
                                alert('Error');
                            }
                        },
                        error: function (error) {
                            alert(error);
                        }
                    });
                }

            });


        });


        //Input number only with thousand separator
        $(document).on("keyup", ".number", (function (event) {

            // skip for arrow keys
            if (event.which >= 37 && event.which <= 40) return;

            // format number
            $(this).val(function (index, value) {
                return value
                .replace(/\D/g, "")
                .replace(/\B(?=(\d{3})+(?!\d))/g, ",")
                ;
            });
        }));

        function GetPeriode() {
            $.ajax({
                "url": "@Url.Action("GetPeriode", "TransaksiLaporans")",
                "type": "GET",
                "datatype": "json"
            }).then((result) => {
            var Periode = $("#Periode");
            Periode.html('');
            $("<option></option>").val('').text('-Periode-').appendTo(Periode);
            $.each(result, function (i, value) {
                $("<option></option>").val(value.Id).text(value.Penyebut).appendTo(Periode);
            });
        })
        }

        function GetPerusahaan() {
            $.ajax({
                "url": "@Url.Action("GetPerusahaan", "TransaksiLaporans")",
                "type": "GET",
                "datatype": "json"
            }).then((result) => {
                var Perusahaan = $("#Perusahaan");
                Perusahaan.html('');
                $("<option></option>").val('').text('Pilih Perusahaan').appendTo(Perusahaan);
                $.each(result, function (i, value) {
                    $("<option></option>").val(value.Id).text(value.Nama).appendTo(Perusahaan);
                });
            })
        }

        function GetPerwakilan() {
            var Perusahaan = $("#Perusahaan").val();

