@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    span.error {
        display: block;
        visibility: hidden;
        color: red;
        font-size: 90%;
    }

    tr.error {
        background-color: rgba(255,0,0,0.35);
    }
</style>
<link href="~/Content/font-awesome.css" rel="stylesheet" />
<br />
<h3 style="text-align:center">Kelola Surat Utang</h3>

<button class="btn btn-primary" data-toggle="modal" data-target="#myModal" data-backdrop="static" data-keyboard="false" onclick="ClearScreen()" ;>Tambah</button>
<hr />


<div class="modal fade" id="myModal"  role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">Tambah Surat Utang</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <input type="hidden" id="TransaksiId" />
                    <input type="hidden" id="JabatanId" />
                    <div class="form-group row">
                        <label class="col-sm-1 control-label">Perusahaan</label>
                        <div class="col-sm-3">
                            <select required id="Perusahaan" class="form-control select2 disabled" style="width: 100%" data-placement="choose"></select>
                            <span class="error">Perusahaan tidak boleh kosong</span>
                        </div>
                        <label class="col-sm-1 control-label">Jenis Surat Utang</label>
                        <div class="col-sm-3">
                            <select required id="Produk" class="form-control disabled" data-placement="choose"></select>
                            <span class="error">Produk tidak boleh kosong</span>
                        </div>

                        <label class="col-sm-1 control-label">Nama Surat Utang</label>
                        <div class="col-sm-3">
                            <input type="text" id="NamaProduk" class="form-control disabled" placeholder="Nama Produk">
                            <span class="error">Nama Produk tidak boleh kosong</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-1 control-label">PIC</label>
                        <div class="col-sm-3">
                            <select required id="Perwakilan" class="form-control disabled" data-placement="choose" disabled></select>
                            <span class="error">Nama Perwakilan tidak boleh kosong</span>
                        </div>
                        <label class="col-sm-1 control-label">Jabatan</label>
                        <div class="col-sm-3">
                            <input type="text" id="Jabatan" class="form-control disabled" placeholder="" readonly>
                        </div>
                        <label class="col-sm-1 control-label">BNI Sebagai</label>
                        <div class="col-sm-3">
                            <select required id="Tugas" class="form-control disabled" data-placement="choose"></select>
                            <span class="error">Tugas tidak boleh kosong</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-1 control-label">Mata Uang</label>
                        <div class="col-sm-3">
                            <select required id="MataUang" class="form-control disabled" data-placement="choose"></select>
                            <span class="error">Mata Uang tidak boleh kosong</span>
                        </div>
                        <label class="col-sm-1 control-label">Pembayaran bunga/bagi hasil</label>
                        <div class="col-sm-3">
                            <select required id="JenisPembayaran" class="form-control disabled" data-placement="choose">
                                <option value="">Pilih Jenis Pembayaran</option>
                                <option value="Bunga">Bunga</option>
                                <option value="Bagi Hasil">Bagi Hasil</option>
                                <option value="Bunga/Bagi Hasil">Bunga/Bagi Hasil</option>
                            </select>
                            <span class="error">Jenis Pembayaran tidak boleh kosong</span>
                        </div>
                        <label class="col-sm-1 control-label">Fee BNI</label>
                        <div class="col-sm-3">
                            <div class="input-group">
                                <span class="input-group-addon" id="pre"></span>
                                <input type="text" class="form-control number disabled" placeholder="1,000,000,000" id="Fee">
                            </div>
                            <span class="error">Fee tidak boleh kosong</span>
                        </div>
                    </div>
                    <br />

                    <h4>Pembayaran ke rekening ksei</h4>
                    <hr />
                    <div class="form-group row">
                        <label class="col-sm-1 control-label">Jenis Pengiriman</label>
                        <div class="col-sm-3">
                            <input type="text" id="JenisPengiriman" class="form-control disabled" placeholder="Jenis Pengiriman" value="RTGS MT 103, TTC 104">
                            <span class="error">Jenis Pengiriman tidak boleh kosong</span>
                        </div>
                        <label class="col-sm-1 control-label">Nama Bank</label>
                        <div class="col-sm-3">
                            <input type="text" id="NamaBank" class="form-control disabled" placeholder="Nama Bank" value="PT Kustodian Sentral Efek Indonesia">
                            <span class="error">Nama Bank tidak boleh kosong</span>
                        </div>
                        <label class="col-sm-1 control-label">Nama Penerima</label>
                        <div class="col-sm-3">
                            <input type="text" id="NamaPenerima" class="form-control disabled" placeholder="Nama Penerima">
                            <span class="error">Nama Penerima tidak boleh kosong</span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-1 control-label">No. Rekening</label>
                        <div class="col-sm-3">
                            <input type="text" id="NoRekening" class="form-control disabled" placeholder="Nomor Rekening Penerima">
                            <span class="error">Nomor Rekening tidak boleh kosong</span>
                        </div>
                    </div>
                </div>
                <br />

                <div class="detail">
                    <h4>Detail</h4>
                    <table class="table table-responsive">
                        <tr>
                            <td style="display:none;"></td>
                            <td style="width:50px">Seri</td>
                            <td style="width:150px">Kode Efek</td>
                            <td style="width:130px">Periode</td>
                            <td style="width:180px;">Oustanding</td>
                            <td style="width:170px">Tanggal Terbit</td>
                            <td style="width:90px">Bunga</td>
                            <td style="width:170px">Jatuh Tempo</td>
                            <td>&nbsp;</td>
                        </tr>
                        <tr class="mycontainer" id="mainrow">
                            <td>
                                <input type="text" id="Seri" class="seri form-control disabled" maxlength="1" style="width:50px;" />
                                <span class="error">Seri tidak boleh kosong</span>
                            </td>
                            <td>
                                <input type="text" id="KodeEfek" class="kodeefek form-control disabled" style="width:150px" placeholder="Kode Efek" />
                                <span class="error">KodeEfek tidak boleh kosong</span>
                            </td>
                            <td>
                                <select required id="Periode" class="form-control disabled periode" style="width:130px" data-placement="choose" disabled></select>
                            </td>
                            <td>
                                <input type="text" id="Nominal" class="nominal form-control number disabled" placeholder="Nominal" style="width:180px;" />
                                <span class="error">Nominal tidak valid</span>
                            </td>
                            <td>
                                <input type="date" id="Terbit" class="terbit form-control disabled" style="width:170px;" />
                                <span class="error">Tanggal tidak valid</span>
                            </td>
                            <td>
                                <div class="input-group">
                                    <input type="text" id="Bunga" class="bunga form-control disabled" style="width:90px;" />
                                    <span class="input-group-addon" id="prepreiode">%</span>
                                </div>
                                <span class="error">Bunga tidak valid</span>
                            </td>
                            <td>
                                <input type="date" id="JatuhTempo" class="jatuhtempo form-control disabled" style="width:170px;" />
                                <span class="error">Tanggal tidak valid</span>
                            </td>
                            <td>

                                <a class='btn btn-success btn-sm' id="add" title='Tambah Detail'><i class='fa fa-plus'></i></a>
                            </td>
                        </tr>
                    </table>

                    <div id="orderItems">
                        <table class="table table-responsive " id="detailsItems"></table>
                        <span id="ItemError" style="color:red"></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save">Simpan</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="ClearScreen()">Close</button>
            </div>
        </div>
    </div>
</div>

